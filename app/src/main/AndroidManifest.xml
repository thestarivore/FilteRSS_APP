<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.filterss.filterssapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="com.filterss.filterssapp.ArticleActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.filterss.filterssapp.ArticlesListActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.filterss.filterssapp.FeedsSearchActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.filterss.filterssapp.MultifeedManagerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.filterss.filterssapp.CollectionManagerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.filterss.filterssapp.LoginActivity"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.filterss.filterssapp.SignupActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.filterss.filterssapp.MultifeedCreationActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.filterss.filterssapp.LoadingActivity"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.filterss.filterssapp.BrowserActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>