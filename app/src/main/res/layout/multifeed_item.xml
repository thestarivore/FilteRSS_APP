<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:padding="6dip">

    <View
        android:id="@+id/viewMultifeedColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:layout_weight="2"
        android:background="@drawable/rounded_button" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewMultifeedName"
            style="@style/material_type_scale_h6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="Feed Name" />

        <TextView
            android:id="@+id/textViewMultifeedCount"
            style="@style/material_type_scale_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feed Count" />
    </LinearLayout>


    <ImageView
        android:id="@+id/imageViewMultifeedEdit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_weight="2"
        android:padding="8dp"
        app:srcCompat="@drawable/ic_edit_black_24dp" />
</LinearLayout>